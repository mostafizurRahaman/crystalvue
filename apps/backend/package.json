{
  "name": "backend",
  "private": true,
  "scripts": {
    "build": "npx tsc",
    "build:check": "tsc --noEmit",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules --no-notify src/server.ts",
    "dev:debug": "ts-node-dev --inspect --respawn --transpile-only src/server.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "lint:check": "eslint src --ext .ts --max-warnings 0",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "quality-check": "npm run lint:check && npm run type-check",
    "pre-commit": "npm run lint:fix && npm run format && npm run build:check",
    "clean": "rm -rf dist",
    "clean:all": "rm -rf dist node_modules package-lock.json && npm install",
    "dev:full": "npm run clean && npm run dev",
    "check-all": "npm run lint:check && npm run type-check && npm run build:check",
    "ci": "npm run lint:check && npm run type-check && npm run build",
    "db:generate": "npx prisma generate",
    "db:migrate": "npx prisma migrate dev",
    "db:push": "npx prisma db push",
    "db:studio": "npx prisma studio",
    "db:reset": "npx prisma migrate reset",
    "db:deploy": "npx prisma migrate deploy"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/bun": "latest",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/http-status": "^1.1.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.0",
    "@types/pg": "^8.15.5",
    "@types/ws": "^8.18.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "bcrypt": "^6.0.0",
    "cloudinary": "^2.8.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "http-status": "^2.1.0",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.1.6",
    "pg": "^8.16.3",
    "prisma": "^6.17.1",
    "ts-node-dev": "^2.0.0",
    "ws": "^8.18.3",
    "zod": "^4.1.12"
  }
}
